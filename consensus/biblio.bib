author = {Fischer, M. J. and Lynch, N. A. and Paterson, M. S.},
title = {IMPOSSIBILITY OF DISTRIBUTED CONSENSUS WITH ONE FAULTY PROCESS},
year = {1982},
publisher = {Massachusetts Institute of Technology},
address = {USA},
abstract = {The consensus problem involves an asynchronous system of processes, some of which
may be unreliable. The problem is for the reliable processes to agree on a binary
value. We show that every protocol for this problem has the possibility of nontermination,
even with only one faulty process. By way of contrast, solutions are known for the
synchronous case, the "Byzantine Generals" problem.}
}

